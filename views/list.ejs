<%- include("header") -%>
<div class="box" id="heading">
  <h2> <%= kindOfDay %></h2>
  <h2> <%= title %></h2>
</div>
<div class="box">
  <% todos.forEach(todo => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="itemCheckbox" value=<%= todo._id %> onchange="this.form.submit()" />
      <p><%= todo.name %></p>
      <input type="hidden" name="title" value=<%= title %>>
    </div>
  </form>
  <% }) %>
  <form class="item" action="/" method="post">
    <input type="text" name="todoItem" placeholder="Todo Item" autocomplete="off" />
    <button type="submit" name="button" value=<%= title%>>+</button>
  </form>
</div>
<%- include("footer") -%>
